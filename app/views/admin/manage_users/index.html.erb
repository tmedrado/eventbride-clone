<center>
  <h1>Manage Users</h1>
</center>
<br>
<table class="table">
  <thead>
    <tr>
      <td>ID</td>
      <td>Name</td>
      <td>Email</td>
      <td>Actions</td>
    </tr>
  </thead>
  <tbody>
    <% User.all.each do |user| %>
    <tr>
      <td><%= user.id%></td>
      <td><%= user.first_name%> <%= user.last_name%></td>
      <td><%= user.email%></td>

      <td>
        <a href="<%= %>" class="btn btn-primary">Edit </a>
        <a href="<%= user_path(user.id) %>" class="btn btn-danger" data-confirm="Are you sure?" data-method="delete">Delete</a>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>