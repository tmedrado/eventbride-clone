<%= form_for @event do |f| %>
<%= image_tag @event.pic, style:"width:50%;", alt: 'pic' %>

<%= form_tag event_pics_path(@event), multipart: true do %>
<%= file_field_tag :pic %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= submit_tag "Update Pic", class:"btn btn-info"%>
<% end %>
<div class="form-group mt-4">
  <label>Event's title</label>
  <%= f.text_field :title, class: 'form-control' %>
</div>
<div class="form-group">
  <label>Events's Description</label>
  <%= f.text_area :description, class: 'form-control' %>
</div>
<div class="form-group">
  <button type="submit" class="btn btn-primary">Modify your Event</button>
</div>
<% end %>